<h1>Books</h1>

<!-- ここから一覧 -->


  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      <tr>
    </thead>
    <tbody>
      <% @books.each do |list| %>
      <tr>
        
          <th><%= list.title %></th>
          <th><%= list.body %></th>
        <th><%= link_to "Show", books_path %></th>
        <th><%= link_to "Edit", books_path %></th>
        <th><%= link_to "Destroy", books_path %></th>
      <tr>
      <% end %>
    </tbody>
  </table>




  

<!-- ここから下は新規投稿 -->
<h2>New Book</h2>



<div class="new-book">
  <%= form_with model:@c_book do |f| %>
    <div class="field">
      <label for="book-title">Title</label>
      <%= f.text_field :title, id:"book-title" %>
    </div>

    <div class="field">
      <label for="book-body">Body</label>
      <%= f.text_area :body, id:"book-body" %>
    </div>

    <%= f.submit 'Create Book' %>
  <% end %>
</div>





<!-- labelは読み上げソフトがフォーム入力だと認識してくれる。また要素内の文章をクリックするとフォームへ移動してくれてUIが良い。 -->
<!-- labelにfor=、フォームにid=で紐づける -->
<!-- labelは自動で改行されないからdivなどでブロックを作る -->
